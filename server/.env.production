# Server Configuration
PORT=5000
NODE_ENV=production

# Database
MONGODB_URI=mongodb://schoola_admin:${MONGODB_PASSWORD}@localhost:27017/schoola_taawon_prod?authSource=admin

# Authentication
JWT_SECRET=votre_secret_tres_long_et_complexe_a_changer_en_production
JWT_EXPIRES_IN=24h

# Client URL
CLIENT_URL=http://localhost:3000

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_PATH=/var/log/schoola-taawon